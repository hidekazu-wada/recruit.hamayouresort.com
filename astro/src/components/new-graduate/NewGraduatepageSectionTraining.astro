---
import NumberList from '@components/common/NummberList.astro';
import LowerPageH2 from '@components/common/LowerPageH2.astro';
import backgroundImageTraining from '@assets/images/new-graduate/new-graduatepage-training-bg.jpg';
import { getImage } from 'astro:assets';

const numberItems = [
  {
    number: '01',
    title: 'BootCamp（3か月）',
    description:
      'ビジネスマナーや英会話のスキルを磨くことは、特に接客業において非常に重要です。接客ロールプレイを通じて、実際のシチュエーションを想定しながら、効果的なコミュニケーション技術を身につけることができます。これにより、お客様との信頼関係を築き、より良いサービスを提供することが可能になります。',
  },
  {
    number: '02',
    title: 'OJT（4～12か月） ',
    description:
      '先輩とペアでフロント・温泉・キャンプ場をローテーション。月1回フィードバック面談',
  },
  {
    number: '03',
    title: 'キャリアラダー研修（2年目〜）',
    description:
      '提案プレゼンテーション研修は、管理者候補を育成するための重要なプログラムです。この研修では、効果的なプレゼンテーションスキルを身につけることができ、参加者は自信を持って提案を行うことができるようになります。また、海外提携リゾート視察も行い、国際的な視野を広げることができます。',
  },
];

const optimizedImageTraining = await getImage({
  src: backgroundImageTraining,
  format: 'webp', // webpに変換
  quality: 80, // 任意: 品質設定
});
---

<section
  class="section-training"
  style={`background-image: url(${optimizedImageTraining.src})`}
>
  <LowerPageH2 title="研修・育成制度" variant="default" position="left" />
  <NumberList items={numberItems} variant="new-graduate" />
</section>

<style lang="scss">
  @import '@styles/functions.scss';
  @import '@styles/mixins.scss';

  .section-training {
    background-position: top right -84vw;
    background-repeat: no-repeat;
    padding: spx(60) spx(20);
    background-size: auto 100%;
    background-color: #e6e6e6;
    background-blend-mode: soft-light;
    @include tablet-up {
      background-position: top right -38vw;
      padding: spx(60) * 0.75 spx(20) * 0.75;
    }
    @include desktop-up {
      padding: ppx(100) ppx(160);
      background-size: cover;
      background-position: center;
    }
  }
</style>
