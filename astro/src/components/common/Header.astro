---
import Navigation from '@components/common/Navigation.astro';
import { Image } from 'astro:assets';
---

<header>
  <h1>
    <Image
      src="/hamayou-logo.svg"
      alt="HAMAYOUリゾート"
      width={200}
      height={200}
    />
  </h1>
  <Navigation type="header" />
  <button class="menu-toggle" aria-label="メニューを開閉" aria-expanded="false">
    <Image
      src="/hamburger.svg"
      alt="メニューを開く"
      width={50}
      height={50}
      class="hamburger"
    />
    <Image
      src="/hamburger-close.svg"
      alt="メニューを閉じる"
      width={50}
      height={50}
      class="menu-close"
    />
  </button>
</header>

<style lang="scss">
  @import '@styles/functions.scss';
  @import '@styles/mixins.scss';

  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: spx(10) spx(20);
    border-bottom: 1px solid rgba(255, 255, 255, 0.9);
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.8) 0%,
      rgba(255, 255, 255, 0.6) 100%
    );
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.12);
    backdrop-filter: blur(30px);
    @include tablet-up {
      padding: spx(10) * 0.75 spx(20) * 0.75;
    }
    @include desktop-up {
      padding: ppx(20) ppx(40);
    }
    h1 {
      img {
        display: block;
        width: spx(180);
        height: auto;
        @include tablet-up {
          width: spx(180) * 0.75;
        }
        @include desktop-up {
          width: ppx(230);
        }
      }
    }
    .menu-toggle {
      display: block;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0;
      @include desktop-up {
        display: none;
      }
      .hamburger {
        display: block;
      }

      .menu-close {
        display: none;
      }
    }
  }
</style>
