---
interface Message {
  image: {
    src: string;
    alt: string;
    width: number;
    height: number;
  };
  title: string;
  description: string;
}
interface Props {
  messages: Message[];
}
const { messages } = Astro.props;
---

<div class="messages">
  {
    messages.map((message) => (
      <article class="message">
        <figure class="message-image-wrapper">
          <img
            src={message.image.src}
            alt={message.image.alt}
            width={message.image.width}
            height={message.image.height}
          />
          <figcaption>
            <h3>{message.title}</h3>
            <p>{message.description}</p>
          </figcaption>
        </figure>
      </article>
    ))
  }
</div>

<style lang="scss">
  @import '@styles/functions.scss';
  @import '@styles/mixins.scss';

  .messages {
    display: grid;
    grid-template-columns: auto;
    gap: spx(28);
    @include tablet-up {
      grid-template-columns: auto auto;
      gap: spx(28);
    }
    @include desktop-up {
      gap: ppx(40);
    }
    .message {
      background-color: #fff;
      padding: spx(20);
      @include tablet-up {
        padding: spx(20) * 0.75;
      }
      @include desktop-up {
        padding: ppx(20);
      }
      .message-image-wrapper {
        display: grid;
        grid-template:
          'caption'
          'image';
        gap: spx(20);
        @include tablet-up {
          grid-template:
            'image'
            'caption';
          gap: spx(20) * 0.75;
        }
        @include desktop-up {
          gap: ppx(20);
        }

        img {
          grid-area: image;
          display: block;
          object-fit: cover;
          width: 100%;
          height: auto;
          margin-inline: auto;
          @include tablet-up {
          }
          @include desktop-up {
            width: 80%;
            height: auto;
          }
        }
        figcaption {
          grid-area: caption;
          h3 {
            color: #054965;
            font-size: spx(18);
            font-weight: 700;
            line-height: 140%;
            text-align: center;

            @include tablet-up {
              font-size: spx(18) * 0.75;
            }

            @include desktop-up {
              font-size: ppx(20);
            }
          }
          p {
            color: #054965;
            font-size: spx(14);
            font-weight: 400;
            line-height: 140%;
            margin-top: spx(20);

            @include tablet-up {
              font-size: spx(14) * 0.75;
              margin-top: spx(20) * 0.75;
            }

            @include desktop-up {
              font-size: ppx(18);
              margin-top: ppx(20);
            }
          }
        }
      }
    }
  }
</style>
