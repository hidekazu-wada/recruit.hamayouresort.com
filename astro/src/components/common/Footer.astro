---
import WaveDecoration from '@components/common/WaveDecoration.astro';
import { Image } from 'astro:assets';
---

<footer>
  <WaveDecoration fillColor="#E7F3F9" position="top" />
  <div class="social-icons">
    <a href="#">
      <Image
        src="/facebook.svg"
        alt="facebook"
        width={50}
        height={50}
        class="social-icon"
      />
    </a>
    <a href="#">
      <Image
        src="/instagram.svg"
        alt="instagram"
        width={50}
        height={50}
        class="social-icon"
      />
    </a>
  </div>
  <div class="contact-info">
    <p>お問い合わせ</p>
    <a href="tel:0555-82-2922">tel:0555-82-2922</a>
  </div>
  <p class="address">
    〒 401-0332<br />
    山梨県 南都留郡 富士河口湖町 西湖1023
  </p>
  <div class="copyright">
    <small>&copy; 2025 HAMAYOUリゾート. All Rights Reserved.</small>
  </div>
</footer>

<style lang="scss">
  @import '@styles/functions.scss';
  @import '@styles/mixins.scss';
  footer {
    background: linear-gradient(96deg, #054965 0.03%, #59a1c0 99.97%), #054965;
    color: #fff;
    position: relative;
    padding: spx(60) 0;
    @include tablet-up {
      padding: spx(60) * 0.75 0;
    }
    @include desktop-up {
      padding: ppx(100) 0;
    }
    .social-icons {
      display: flex;
      justify-content: center;
      gap: spx(24);
      margin-top: spx(100);
      @include tablet-up {
        gap: spx(24) * 0.75;
        margin-top: spx(100) * 0.75;
      }
      @include desktop-up {
        gap: ppx(24);
        margin-top: ppx(70);
      }
      a {
        display: block;
        .social-icon {
          width: spx(40);
          height: spx(40);
          @include tablet-up {
            width: spx(40) * 0.75;
            height: spx(40) * 0.75;
          }
          @include desktop-up {
            width: ppx(40);
            height: ppx(40);
          }
        }
      }
    }
    .contact-info {
      margin-top: spx(48);
      @include tablet-up {
        margin-top: spx(48) * 0.75;
      }
      @include desktop-up {
        margin-top: ppx(48);
      }
      p {
        font-size: spx(16);
        font-weight: 500;
        line-height: 120%;
        text-align: center;
        margin-top: spx(16);

        @include tablet-up {
          font-size: spx(16) * 0.75;
          margin-top: spx(16) * 0.75;
        }

        @include desktop-up {
          font-size: ppx(16);
          margin-top: ppx(16);
        }
      }
      a {
        display: block;
        font-size: spx(20);
        font-weight: 500;
        line-height: 120%;
        text-align: center;
        margin-top: spx(10);

        @include tablet-up {
          font-size: spx(20) * 0.75;
          margin-top: spx(10) * 0.75;
        }

        @include desktop-up {
          font-size: ppx(20);
          margin-top: ppx(10);
        }
      }
    }
    .address {
      font-size: spx(15);
      font-weight: 400;
      line-height: 133.333%;
      text-align: center;
      margin-top: spx(48);
      @include tablet-up {
        margin-top: spx(48) * 0.75;
      }
      @include desktop-up {
        margin-top: ppx(48);
      }

      @include tablet-up {
        font-size: spx(15) * 0.75;
      }

      @include desktop-up {
        font-size: ppx(15);
      }
    }
    .copyright {
      text-align: center;
      margin-top: spx(48);
      @include tablet-up {
        margin-top: spx(48) * 0.75;
      }
      @include desktop-up {
        margin-top: ppx(48);
      }
      small {
        font-size: spx(12);
        font-weight: 400;
        line-height: 133.333%;

        @include tablet-up {
          font-size: spx(12) * 0.75;
        }

        @include desktop-up {
          font-size: ppx(12);
        }
      }
    }
  }
</style>
