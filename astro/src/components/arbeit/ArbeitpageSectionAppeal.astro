---
import LowerPageH2 from '@components/common/LowerPageH2.astro';
import NumberList from '@components/common/NummberList.astro';
import MessageCard from '@components/common/MessageCard.astro';
const numberItems = [
  {
    number: '01',
    title: '充実した研修制度',
    description:
      '未経験の方でも安心して働けるよう、接客マナーや業務の基本から丁寧に指導します。実際の現場を想定したロールプレイで、実践的なスキルを身につけることができます。',
  },
  {
    number: '02',
    title: 'シフトの柔軟性',
    description:
      '学業や他の活動と両立しやすいよう、シフトの希望を最大限考慮します。週1日からでもOK。長期休暇中の集中勤務も可能です。',
  },
  {
    number: '03',
    title: '魅力的な福利厚生',
    description:
      '時給1,200円〜（経験・能力に応じて昇給あり）。交通費全額支給。社員食堂利用可。制服貸与。各種手当あり。',
  },
  {
    number: '04',
    title: '成長の機会',
    description:
      '正社員登用のチャンスあり。リーダー候補としての育成制度も整っています。将来のキャリアパスを視野に入れた働き方が可能です。',
  },
  {
    number: '05',
    title: '充実した職場環境',
    description:
      '明るく活気のある職場で、先輩スタッフが丁寧にサポート。定期的なミーティングでコミュニケーションを大切にしています。',
  },
  {
    number: '06',
    title: '多様な業務経験',
    description:
      'フロント業務、温泉施設、キャンプ場など、様々な業務を経験できます。自分の得意分野を見つけ、スキルアップが可能です。',
  },
  {
    number: '07',
    title: '特別な特典',
    description:
      'スタッフ割引で施設を利用可能。家族や友人と一緒にリゾートを楽しめます。また、季節ごとのイベントや社員旅行も実施しています。',
  },
];

const messages = [
  {
    image: {
      src: '/assets/images/staff/img-staff-01.webp',
      alt: 'アルバイトスタッフの写真',
      width: 400,
      height: 400,
    },
    title: '「学業と両立しながら、充実した経験が積める」',
    description:
      '西湖リゾートでのアルバイトは、単なる収入を得る場ではなく、社会人としての基礎を学べる貴重な機会です。接客スキルやコミュニケーション能力が自然と身につき、将来のキャリアにも活かせます。シフトも柔軟に対応してくれるので、学業との両立も無理なく続けられます。（フロント担当・2年目）',
  },
  {
    image: {
      src: '/assets/images/staff/img-staff-02.webp',
      alt: 'アルバイトスタッフの写真',
      width: 400,
      height: 400,
    },
    title: '「明るい職場で、毎日が楽しい」',
    description:
      '最初は接客に不安がありましたが、先輩スタッフが丁寧に教えてくれて、すぐに慣れることができました。お客様から「ありがとう」と言っていただける瞬間が何よりのやりがいです。スタッフ同士の仲も良く、休憩時間も楽しく過ごせています。未経験の方でも安心して始められる環境です。（温泉施設担当・1年目）',
  },
];
---

<section class="section-appeal">
  <LowerPageH2
    title="未経験者歓迎・アルバイトの魅力"
    variant="default"
    position="left"
  />
  <div class="appeal-list-wrapper">
    <NumberList items={numberItems} variant="arbeit" />
  </div>
  <article class="appeal-message-wrapper">
    <h3 class="appeal-message-text">スタッフの声</h3>
    <MessageCard messages={messages} variant="double" />
  </article>
</section>

<style lang="scss">
  @import '@styles/functions.scss';
  @import '@styles/mixins.scss';

  .section-appeal {
    padding: spx(60) spx(20);
    background-color: #d8edf7;
    @include tablet-up {
      padding: spx(60) * 0.75 spx(20) * 0.75;
    }
    @include desktop-up {
      padding: ppx(100) ppx(160);
    }
    .appeal-list-wrapper {
      margin-top: spx(40);
      @include tablet-up {
        margin-top: spx(40) * 0.75;
      }
      @include desktop-up {
        margin-top: ppx(40);
      }
      .number-list {
      }
    }
    .appeal-message-wrapper {
      margin-top: spx(80);
      @include tablet-up {
        margin-top: spx(80) * 0.75;
      }
      @include desktop-up {
        margin-top: ppx(80);
      }
      .appeal-message-text {
        font-size: spx(18);
        font-weight: 700;
        line-height: 140%;
        text-align: center;
        margin-bottom: spx(20);
        @include tablet-up {
          font-size: spx(18) * 0.75;
          margin-bottom: spx(20) * 0.75;
        }

        @include desktop-up {
          font-size: ppx(20);
          margin-bottom: ppx(20);
        }
      }
    }
  }
</style>
