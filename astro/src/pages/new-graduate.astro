---
import MySiteLayout from '@layouts/MySiteLayout.astro';
import LowerPageHeader from '@components/common/LowerPageHeader.astro';
import RecruitLowerPageHero from '@components/common/RecruitLowerPageHero.astro';
import HeroImage from '@assets/images/new-graduate/new-graduatepage-hero.jpg';
import SectionFlow from '@components/common/SectionFlow.astro';
import NewGraduatepageSectionTraining from '@components/new-graduate/NewGraduatepageSectionTraining.astro';
import NewGraduatepageSectionMessage from '@components/new-graduate/NewGraduatepageSectionMessage.astro';
import NewGraduatepageSectionIntern from '@components/new-graduate/NewGraduatepageSectionIntern.astro';
---

<MySiteLayout pageTitle="新卒の方">
  <LowerPageHeader pageTitleEn="New grad" pageTitleJa="新卒の方" />
  <RecruitLowerPageHero
    title="初めての一歩が、誰かの特別になる。"
    description='富士西湖の美しい自然の中で、あなたの挑戦が始まります。ここでは、ゼロから"おもてなし"のプロフェッショナルへと成長するための舞台が整っています。新卒応募者の皆さん、勇気を持って一歩を踏み出し、未来を切り拓いていきましょう。'
    heroImage={HeroImage}
    variant="new-graduate"
  />
  <SectionFlow variant="lower-recruit" />
  <NewGraduatepageSectionTraining />
  <NewGraduatepageSectionMessage />
  <NewGraduatepageSectionIntern />
</MySiteLayout>
